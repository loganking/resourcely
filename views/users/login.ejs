<%- include ../_header.ejs %>
  <div class="container-fluid">
    <form class="form-horizontal" action="" method="post">
      <div class="form-group">
        <label class="col-sm-2 control-label" for="inputEmail">Email address</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" id="inputEmail" placeholder="Email" name="email"
            <% if (typeof(data) !== 'undefined' && typeof(data.email) !== 'undefined') { %>value="<%= data.email %>"<% } %>>
          <% if (typeof(errors) !== 'undefined' && typeof(errors.email) !== 'undefined') { %>
            <div class="alert alert-danger">
            <% for (var i=0, len=errors.email.length; i<len; i++){ %>
              <p><%= errors.email[i] %></p>
            <% } %>
            </div>
          <% } %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label" for="inputPassword">Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password"
            <% if (typeof(data) !== 'undefined' && typeof(data.password) !== 'undefined') { %>value="<%= data.password %>"<% } %>>
          <% if (typeof(errors) !== 'undefined' && typeof(errors.password) !== 'undefined') { %>
            <div class="alert alert-danger">
            <% for (var i=0, len=errors.password.length; i<len; i++){ %>
              <p><%= errors.password[i] %></p>
            <% } %>
            </div>
          <% } %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <% if (typeof(errors) !== 'undefined' && typeof(errors.not_found) !== 'undefined') { %>
            <div class="alert alert-danger">
            <% for (var i=0, len=errors.not_found.length; i<len; i++){ %>
              <p><%= errors.not_found[i] %></p>
            <% } %>
            </div>
          <% } %>
          <button type="submit" class="btn btn-default">Log in</button>
        </div>
      </div>
    </form>
  </div>
  <p> Don't have an account? <a href="/users/new">Sign up here</a>!</p>
<%- include ../_footer.ejs %>
