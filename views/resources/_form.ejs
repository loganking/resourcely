<form class="form-horizontal" action="<%= action %>" method="<%= (method==='GET')? 'GET' : 'POST' %>">
  <% if (typeof(data) !== 'undefined' && typeof(data.id) !== 'undefined') { %>
    <input type="hidden" name="id" value="<%= data.id %>" <%= (method !== 'GET' && method !== 'POST'])? '_method="'+method+"' : '' %> />
  <% } %>
  <%- include('../_input_group.ejs', {input:{name:"Name", slug:"name", placeholder:"Awesome Blog Post", type:"input", required:true}}) %>
  <%- include('../_input_group.ejs', {input:{name:"URL", slug:"url", placeholder:"http://www.example.com", type:"input", required:true}}) %>
  <%- include('../_input_group.ejs', {input:{name:"Description", slug:"description", placeholder:"Lorem ipsum dolor sit amet...", type:"textarea", required:false}}) %>
  <%- include('../_input_group.ejs', {input:{name:"Tags", slug:"tags", placeholder:"HTML, CSS, JavaScript, etc...", type:"textarea", required:false}}) %>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <button type="submit" class="btn btn-default"><%= submit_text %></button>
      <a class="text-danger" href="/resources">cancel</a>
    </div>
  </div>
</form>
