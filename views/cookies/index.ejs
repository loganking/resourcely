<%- include ../_header.ejs %>
<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Ingredients</th>
    <th>Expiration Date</th>
  </tr>
<% for(var i=0; i<cookies.length; i++) { %>
  <tr>
    <td><%= cookies[i].id %></th>
    <td><%= cookies[i].name %></th>
    <td><%= cookies[i].ingredients %></th>
    <td><%= cookies[i].expiration_date %></th>
  </tr>
<% } %>
</table>
<div class="container-fluid">
  <form class="form-horizontal" action="" method="POST">
    <div class="form-group">
      <label class="control-label" for="nameInput">Name:</label>
      <input id="nameInput" class="form-control" type="text" name="name"></input>
    </div>
    <div class="form-group">
      <label class="control-label" for="ingredientsInput">Ingredients:</label>
      <textarea id="ingredientsInput" class="form-control" name="ingredients"></textarea>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
<%- include ../_footer.ejs %>
